<form id='create-survey' action='/surveys' method='post'>
  <input type='hidden' name='survey[creator_id]' value="<%= current_user.id%>">
  <input type='hidden' name='survey[active?]' value="0">
  <ul>
    <li>
      <label for='survey[title]'>Title:</label>
      <input type='text' name='survey[title]'>
    </li>
    <li>
      <textarea rows="10" cols="60" name='survey[description]' placeholder="Survey description..."></textarea>
    </li>
    <li>
      <input type='submit' value='Create This Survey' />
    </li>
  </ul>
</form>
